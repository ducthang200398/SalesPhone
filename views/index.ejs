    <script language="javascript" type="text/javascript">
         function Timkiemdt()
        {   
            var dd="/?tendt="+ document.getElementById("tendt").value 
            window.open(dd);
        }
        function xoadt(madt)
        { 
            var kq=confirm('Bạn có muốn xóa không?');
            if(kq==true)
            {
                var dd='/?ttgh=1&xoagh='+madt; 
                window.open(dd);
            }
        }
        function suadt(madt)
        {
            var sl=	document.getElementById("txtsl"+madt).value;
            var dd='/?ttgh=1&suagh='+madt+'&soluong='+sl; 
            window.open(dd);
        }
      </script>
 
