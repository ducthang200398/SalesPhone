                    <div class="main-content">
                        <div class="text-navigation">
                            <span>Sửa đổi thông tin điện thoại</span>
                        </div>
                        
                        <form name="form1" enctype="multipart/form-data" method="post" action="admin/SuaDT">
                            <table width="400" class="dathang-table" border="0" align="center" cellpadding="0" cellspacing="0">
                             <tr>
                                <td><span class="style3">Mã điện thoại:</span></td>
                                <td><input name="suadt" type="text" id="suadt" value="<%-suadt%>"  readonly="readonly" size="30"></td>
                              </tr>
                              <tr>
                                <td><span class="style3">Tên điện thoại</span></td>
                                <td><input name="tendt" type="text" id="tendt" value="<%-tendt%>" size="30"></td>
                              </tr>
                                <tr>
                                <td><span class="style3">Giá</span></td>
                                <td><input name="gia" type="number" id="gia" value="<%-gia%>"size="30"></td>
                              </tr>
                                <tr>
                                <td><span class="style3">Mã loại</span></td>
                                <td><input name="maloai" type="text" id="maloai" value="<%-maloai%>" size="30"></td>
                              </tr>
                              <tr>
                                <td><span class="style3">Chi tiết sản phẩm</span></td>
                                <td><input name="mota" type="text" id="mota" value="<%-mota%>" size="30"></td>
                              </tr>
                              <tr>
                                <td><p class="style10">&nbsp;Hình điện thoại </p></td>
                                <td><label>
                                  <input name="file" type="file" value="<%-hinh%>" size="45">
                                </label></td>
                              </tr>
                              <tr>
                                <td height="30" colspan="2" align="center">
                                    <br>
                                    <input type="submit" class="btn-order" style="width: 400px" name="Submit" value="HOÀN TẤT">
                                </td>
                              </tr>
                            </table>
                          </form>

                    </div>
                </div>
            </div>
        </div>

        <div class="about">
            <div class="body-container">
                <div class="about-content">
                    <div class="left-part">
